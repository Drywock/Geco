<!doctype html>
<html data-gecodatajs="v3">
  <head>
{{#geco_FileOutput?}}
    <title>{{geco_StageTitle}}</title>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
{{/geco_FileOutput?}}
{{#geco_AutoRefresh?}}
    <meta http-equiv="refresh" content="{{geco_RefreshInterval}}">
{{/geco_AutoRefresh?}}
    <style type="text/css">
html, body, table {
    font-family: Verdana, sans-serif;
    font-size: 12px;
}
h1 {
    font-size: 1.5em;
    text-align: center;
}
h2 { 
    font-size: 1.5em;
    margin: 1em 0 0.5em 1em;
}
table {
    border-collapse:collapse;
}
.right, td {
    text-align: right;
    padding-right: 5px;
}
.controls {
    color: #8B8B8B;
}
.times {
}
.splits {
    color: #586A7C;
    font-size: 11px;
}
.rsplit {
    font-weight: bold;
    color: #474747;
}
.left {
    text-align: left;
}
.ctrlCode {
    font-size: 9px;
    font-weight: normal;
}
td:last-of-type {
    padding-right: 0;
}
tbody:nth-child(2n+1) {
    background-color: rgba(87, 168, 255, 0.11);
}
tbody:nth-child(2n) {
    background-color: rgba(87, 168, 255, 0);
}
.best {
    color: #0055F0;
    font-weight: bold;
}
tbody.empty {
    background-color: rgba(87, 168, 255, 0);
}
    </style>
  </head>
  <body>
    <div id="gecoResults">
    <h1>{{geco_StageTitle}} - {{i18n_SplitsTitle}}</h1>

    <a href="https://chrome.google.com/webstore/detail/osplits/kfnlllbjdagblbcdnmghcljobdlaoaii">Installer O'Splits sous Google Chrome</a>

{{#geco_ResultsCollection}}
    <h2>{{geco_ResultName}} ({{geco_NbFinishedRunners}}/{{geco_NbPresentRunners}}){{#geco_SingleCourse?}} - {{geco_CourseLength}}m, {{geco_CourseClimb}}m{{/geco_SingleCourse?}}</h2>
    <table>
{{#geco_RankedRunners}}
      <tbody>
      <tr class="rsplit"><td>{{geco_RunnerRank}}</td><td>{{geco_RunnerResultTime}}</td><td class="left" colspan="5">{{geco_RunnerFirstName}} {{geco_RunnerLastName}} - {{geco_RunnerStartId}}</td><td class="left" colspan="5">Chrono : {{geco_RunnerRaceTime}} - Spéciale : {{geco_RunnerManualTimePenalty}}</td></tr>
{{#geco_SplitRows}}
      <tr class="controls"><td></td>{{#geco_ControlRow}}<td>{{geco_ControlNum}} <span class="ctrlCode">{{geco_ControlCode}}</span></td>{{/geco_ControlRow}}</tr>
      <tr class="times"><td></td>{{#geco_TimeRow}}<td {{#geco_BestTime?}}class="best"{{/geco_BestTime?}}>{{geco_ControlTime}}</td>{{/geco_TimeRow}}</tr>
      <tr class="splits"><td></td>{{#geco_SplitRow}}<td {{#geco_BestSplit?}}class="best"{{/geco_BestSplit?}}>{{geco_SplitTime}}</td>{{/geco_SplitRow}}</tr>
{{/geco_SplitRows}}
      </tbody>
{{/geco_RankedRunners}}
      <tbody class="empty"><tr><td>&nbsp;</td></tr></tbody>
{{#geco_UnrankedRunners}}
      <tbody>
      <tr class="rsplit"><td>{{geco_RunnerRank}}</td><td>{{geco_RunnerStatusOrTime}}</td><td class="left" colspan="5">{{geco_RunnerFirstName}} {{geco_RunnerLastName}} - {{geco_RunnerStartId}}</td><td class="left" colspan="5">Chrono : {{geco_RunnerRaceTime}} - Spéciale : {{geco_RunnerManualTimePenalty}}</td></tr>
{{#geco_SplitRows}}
      <tr class="controls"><td></td>{{#geco_ControlRow}}<td>{{geco_ControlNum}} <span class="ctrlCode">{{geco_ControlCode}}</span></td>{{/geco_ControlRow}}</tr>
      <tr class="times"><td></td>{{#geco_TimeRow}}<td {{#geco_BestTime?}}class="best"{{/geco_BestTime?}}>{{geco_ControlTime}}</td>{{/geco_TimeRow}}</tr>
      <tr class="splits"><td></td>{{#geco_SplitRow}}<td {{#geco_BestSplit?}}class="best"{{/geco_BestSplit?}}>{{geco_SplitTime}}</td>{{/geco_SplitRow}}</tr>
{{/geco_SplitRows}}
      </tbody>
{{/geco_UnrankedRunners}}
    </table>
{{/geco_ResultsCollection}}
  </div>
  </body>
</html>
